  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "benchmark": "^2.1.4",
    "chemcalc": "^3.4.1",
    "cheminfo-tools": "^1.22.4",
    "codecov": "^3.2.0",
    "documentation": "^6.3.3",
    "eslint": "^5.14.1",
    "eslint-config-cheminfo": "^1.20.0",
    "eslint-plugin-import": "^2.16.0",

  "scripts": {
    "build": "cheminfo build -r MolecularFormula && npm run build-docs",
    "build-docs": "ls packages | xargs -I % sh -c 'cd packages/%; documentation build src/index.js -f html -o ../../docs/%; cd ../..'",
    "eslint": "eslint packages --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepare": "lerna bootstrap",
    "publish": "git pull --rebase && npm run test && lerna publish",
    "test": "npm run testonly && npm run eslint",
    "test-travis": "eslint src && jest --coverage && codecov",
    "testonly": "jest"
  },
  "repository": {
    "type": "git",

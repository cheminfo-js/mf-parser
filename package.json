{
  "private": true,
  "name": "molecular-formula",
  "version": "0.1.0",
  "scripts": {
    "build": "npm run build-emdb && npm run build-docs",
    "build-emdb": "cheminfo build --cwd=./packages/emdb --out=../../dist",
    "build-docs": "ls packages | xargs -I % sh -c 'cd packages/%; documentation build src/index.js -f html -o ../../docs/%; cd ../..'",
    "eslint": "eslint packages/*.js --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepare": "lerna bootstrap",
    "publish": "git pull --rebase && npm run test && lerna publish",
    "test": "npm run testonly && npm run eslint",
    "test-travis": "eslint src && jest --coverage && codecov",
    "testonly": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cheminfo-js/mf-parser.git"
  },
  "author": "Luc Patiny <luc@patiny.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo-js/mf-parser/issues"
  },
  "homepage": "https://github.com/cheminfo-js/mf-parser#readme",
  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "benchmark": "^2.1.4",
    "chemcalc": "^3.4.1",
    "cheminfo-tools": "^1.20.2",
    "codecov": "^3.0.0",
    "eslint": "^4.15.0",
    "eslint-config-cheminfo": "^1.12.0",
    "eslint-plugin-jest": "^21.6.2",
    "eslint-plugin-no-only-tests": "^2.0.0",
    "jest": "^22.1.1",
    "lerna": "^2.7.1",
    "npm-run-all": "^4.1.2"
  },
  "dependencies": {
    "documentation": "^6.0.0",
    "sum-object-keys": "^1.0.0"
  }
}

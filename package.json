    "jest-matcher-deep-close-to": "^1.3.0",
    "lerna": "^2.11.0",
    "node-fetch": "^2.3.0",
    "npm-run-all": "^4.1.3",
    "wikidata-sdk": "^5.15.10",
    "xy-parser": "^2.2.2"
  },
